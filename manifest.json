{
    "name": "Issue to Google Calendar",
    "version": "1.0",
    "description": "",
    "background": {
        "scripts": ["lib/jquery.min.js", "background.js", "constants.js", "calendar.js"],
        "persistent": false
    },
    "icons": {
        "16" : "icon.png",
        "48" : "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [{
        "matches": [
            "https://github.com/*/issues/new"
        ],
        "js":      ["lib/jquery.min.js", "monitoring.js", "markdownParser.js"],
        "run_at": "document_idle"
    }],
    "page_action": {
        "default_title": "Issue to Google Calender",
        "default_popup": "pageAction.html",
        "default_icon": {
            "19": "icon.png",
            "38": "icon.png"
        }
    },
    "oauth2": {
        "client_id": "933519817717-vkvab36543pfe5brtdtc67t4j4ej32vc.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/calendar"]
    },
    "permissions" : [
        "tabs",
        "identity",
        "activeTab",
        "storage",
        "https://github.com/*/issues/new"
    ],
    "manifest_version": 2
}
